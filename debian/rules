#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
#
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
#
# Modified to make a template file for a multi-binary package with separated
# build-arch and build-indep targets  by Bill Allombert 2001

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS
export PLATFORM=IMX51
export INCLUDE=-I/usr/src/linux/include/
export LIB_VERSION_MAJOR=2
export LIB_VERSION_MINOR=0

DEB_HOST_MULTIARCH ?= $(shell dpkg-architecture -qDEB_HOST_MULTIARCH)

autogen-files = debian/libipu-dev.install	debian/libipuscreenlayer.install	debian/libvpu-dev.install \
		debian/libipu.install		debian/libsahara-dev.install		debian/libvpu.install \
		debian/libipuscreenlayer-dev.install					debian/libsahara.install \
		pkgconfig/ipu-core-imx.pc	pkgconfig/vpu-core-imx.pc

debian/%: debian/%.in
        sed -e 's/$${DEB_HOST_MULTIARCH}/$(DEB_HOST_MULTIARCH)/g' $< > $@

pkgconfig/%: pkgconfig/%.in
        sed -e 's/$${DEB_HOST_MULTIARCH}/$(DEB_HOST_MULTIARCH)/g' $< > $@

%:
	dh $@ 
